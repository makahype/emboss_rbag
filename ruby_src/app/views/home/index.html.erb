
<header class="user-header">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
      <input type="hidden" id="login_status" value="1"/>
    <% else %>
      <input type="hidden" id="login_status" value="0"/>
    <% end %>
</header>

